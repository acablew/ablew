<div class="jumbotron">
  <div class="row">
    <h3><span>Subject Name: &nbsp</span><span class="label label-warning"><%= @subject.name %></span></h3>
    <h3></h3>
  </div>
  <div>
    <%= link_to edit_subject_path(@subject) do %>
      <div class="btn btn-primary">
        <span class="glyphicon glyphicon-edit"></span> Edit
      </div>
    <% end %>
    <%= link_to @subject, method: :delete, data: {confirm: "Are you sure?"}  do %>
      <div class="btn btn-danger">
        <span class="glyphicon glyphicon-remove"></span> Delete
      </div>
    <% end %>
  </div>
  <%= link_to :controller=>'subjects',:action =>'index' do %>
    <div class="btn btn-primary" style="float:right">
      <span class="glyphicon glyphicon-menu-left"></span> Back
    </div>
  <% end %>
</div>
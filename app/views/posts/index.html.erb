<div class="container">
  <div class="row">
    <%= link_to "posts" do %>
      <span>Posts</span>
    <% end %>
  </div>
  <div class="index-content">

    <div class="row">
      <%= link_to "posts/new", "data-turbolinks" => false  do %>
        <button class="btn btn-success">Create</button>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-8">
        <% @posts.each do |post| %>
          <div class="col-lg-12">
            <%= link_to post do %>
              <div class="card">
                <span style="float: right; margin-bottom: 10px" class="label label-warning"><%= post.country_name %></span>
                <!--                        <img src="http://cevirdikce.com/proje/hasem-2/images/finance-1.jpg">-->
                <h4 style="padding-top: 20px"><%= post.title %></h4>
                <button class="blue-button">Published</button>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
      <div class="col-md-1"></div>
      <div class="col-md-3">
        <h3>Categories</h3>
        <% @categories.each do |category| %>
          <div>
            <%= link_to :controller => "posts", :action => "index", :category =>category do %>
              <div style="padding:10px"><%= category.name %></div>
            <% end  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


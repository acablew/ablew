<%= tinymce_assets %>
<%= tinymce %>
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages2' %>
  <%= f.label :Category %><br>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Choose a category'}, {:class => "form-control" }) %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: 'Type the post title here', class: "form-control" %><br>
  <div style="height: 10px"></div>
  <%= f.label :content %><br>
  <%= f.cktext_area :content %>
  <%= f.label :country %><br>
  <%= f.country_select :country , {}, {class: 'form-control'} %><br><br>
  <%= f.submit "Save", :class => "btn btn-success" %>
  <%= link_to :controller=>'posts',:action =>'index' do %>
    <div class="btn btn-primary" style="float: right">
      <span class="glyphicon glyphicon-menu-left"></span> Back
    </div>
  <% end %>
<% end %>
<%= tinymce %>
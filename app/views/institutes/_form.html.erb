<%= form_for(@institute) do |f| %>
  <%#= render 'shared/error_subject_messages' %>
  <%= f.label :State %><br>
  <%= f.collection_select(:state_id, State.all, :id, :name, {prompt: 'Choose a Institute'}, {:class => "form-control" }) %><br>
  <%= f.label :name %><br>
  <%= f.text_field :name, placeholder: 'Type the institute name', class: "form-control" %><br>
  <%= f.submit "Save", :class => "btn btn-success" %>
  <%= link_to :controller=>'institutes',:action =>'index' do %>
    <div class="btn btn-primary" style="float:right">
      <span class="glyphicon glyphicon-menu-left"></span> Back
    </div>
  <% end %>
<% end %>